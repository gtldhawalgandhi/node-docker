{
  "name": "@app/realtime",
  "version": "1.0.0",
  "scripts": {
    "client": "node client.js",
    "build": "esbuild --log-level=error --platform=node --target=node12.20 --minify-whitespace --minify-syntax --bundle --external:mongodb-client-encryption --outdir=build src/server.js",
    "preprod:run": "yarn workspace @app/realtime run build",
    "prod:run": "node build/server.js",
    "predev:run": "yarn workspace @app/lib run build",
    "dev:run": "nodemon --inspect=0.0.0.0 --exec babel-node src/server.js"
  },
  "files": [
    "build/"
  ],
  "nodemonConfig": {
    "ignore": [
      "*.config.*",
      "*compose.yml",
      "*dockerfile*",
      "*ignore*",
      "*_tests_*",
      "package.json"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "core-js": "^3.2.1",
    "express": "^4.17.1",
    "socket.io": "",
    "socket.io-client": "^4.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/node": "^7.14.2",
    "@babel/preset-env": "^7.14.4",
    "babel-jest": "^27.0.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.28.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^27.0.4",
    "nodemon": "^2.0.7"
  }
}